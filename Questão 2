<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <title>Gerador de Lista</title>
    <meta charset="UTF-8">
    <style>
    body {
      font-family: Arial, sans-serif;
      text-align: center;
      padding: 50px;
      background-color: #f9f9f9;
    }

    input, button {
      padding: 10px;
      font-size: 16px;
      margin: 10px;
      width: 200px;
    }

    .mensagem {
      margin-top: 10px;
      color: #333;
      font-weight: bold;
    }
    
    ul {
      list-style-position: inside;
      list-style: disc;
      text-align: left;
      display: inline-block;
      margin-top: 20px;
    }
    
    </style>
  </head>
  <body>
    <h1>Gerador de Lista</h1>

    <form id="formularioLista" novalidate>
        <input type="number" id="numeroinput" placeholder="Digite a quantidade de itens" min="1">
        <button type="submit">Gerar Lista</button>
    </form>

    <div id="mensagensContainer"></div>

    <script>
      const formularioLista = document.getElementById('formularioLista');
      const numeroinput = document.getElementById('numeroinput');
      const mensagensContainer = document.getElementById('mensagensContainer');

      formularioLista.addEventListener('submit', function(evento) {
        evento.preventDefault();

        mensagensContainer.innerHTML = '';

        const numero = parseInt(numeroinput.value.trim());

        if (isNaN(numero) || numero <= 0) {
        const erro = document.createElement('p');
        erro.textContent = 'Por favor, digite um número válido (maior que 0).';
        erro.style.color = 'red';
        mensagensContainer.appendChild(erro);
        return;
      }

        const lista = document.createElement('ul');

        for (let i = 1; i <= numero; i++) {
          const item = document.createElement('li');
          item.textContent = `Emanuel Soares ${i}`;
          item.classList.add('mensagem');
          lista.appendChild(item);
      }
        mensagensContainer.appendChild(lista);
    });
    </script>
  </body>
</html>
