<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <title>Página do Aluno</title>
    <meta charset="UTF-8">
  </head>
  <body>
    <h1>Bem-Vindo!</h1>
    <h4>Digite seu Nome:</h4>
    <form id="formularioNome" action="/submit_form" method="post">
        <input type="text" id="name" placeholder="Seu nome"> <input type="submit" value="Clique Aqui"><br><br>
    </form>

    <p id="aviso"></p>

    <script>
      const formulario = document.getElementById('formularioNome')
      const aviso = document.getElementById('aviso')

      formulario.addEventListener('submit', function(evento) {
        evento.preventDefault();

      const name = document.getElementById('name').value.trim();

      if (name === '') {
        aviso.textContent = 'Por favor, insira seu nome.';
      } else {
        aviso.textContent = `Olá, ${name}! Seja bem-vindo à página do aluno(a):`;
      }
    });
    </script>
  </body>
</html>
